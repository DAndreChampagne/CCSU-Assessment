{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Web/Assessment.Web.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildTests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Tests/Assessment.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Tests/Assessment.Tests.csproj"
            ]
        }
    ]
}