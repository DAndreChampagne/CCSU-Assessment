@model IEnumerable<Assessment.Models.CourseSection>

@{
    ViewData["Title"] = "Index";
}

<h1>All Course Sections</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CRN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CRN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CRN">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CRN">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CRN">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
