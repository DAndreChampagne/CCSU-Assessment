@model IEnumerable<Assessment.Models.Rubric>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.School)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.School.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.File != null) {
                        <a class="" data-toggle="collapse" href="#rubric-data-@item.Id" role="button" aria-expanded="false" aria-controls="">View Details</a> @("|")

                        <a href="#" class="view-pdf" data-pdf="">View PDF</a> @("|")
                        <div style="display: none;" class="model-body-data">
                            <object data="data:application/pdf;base64, @System.Convert.ToBase64String(item.File, 0, item.File.Length)" type="application/pdf" width="100%" height="600px"> 
                                <p>It appears you don't have a PDF plugin for this browser. No biggie... you can <a target="_blank" asp-action="ViewFile" asp-route-id="@item.Id">click here to download the PDF file.</a></p>
                            </object>
                        </div>
                    }
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

            
            <tr style="font-size: .75em;">
                @if (item.RubricCriteria?.Any() ?? false) {
                    <td></td>
                    <td colspan="100">
                        <div class="collapse" id="rubric-data-@item.Id">
                            <div class="card card-body">
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Capstone</th>
                                            <th colspan="2">Milestone</th>
                                            <th>Benchmark</th>
                                        </tr>
                                        <tr>
                                            <th></th>
                                            <th>4</th>
                                            <th>3</th>
                                            <th>2</th>
                                            <th>1</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var criteria in item.RubricCriteria) {
                                            <tr>
                                                <td>@Html.Raw(criteria.Name)</td>
                                                <td>@Html.Raw(criteria.Desciption4)</td>
                                                <td>@Html.Raw(criteria.Desciption3)</td>
                                                <td>@Html.Raw(criteria.Desciption2)</td>
                                                <td>@Html.Raw(criteria.Desciption1)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                    </td>
                }
            </tr>

            

        }
    </tbody>
</table>


<div id="pdfModal" class="modal hide fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
            </div>
            @* <div class="modal-footer">
            </div> *@
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('a.view-pdf').on('click', function () {
                debugger
                let modal = $('#pdfModal');
                let modalBody = modal.find('div.modal-body');
                let data = $(this).siblings('div')[0].innerHTML;

                modalBody.html(data);
                modal.modal('show');
            });
        });
    </script>
}